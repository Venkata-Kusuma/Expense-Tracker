@page
@model Expense_Tracker.Pages.Expenses.DeleteModel

@{
    ViewData["Title"] = "Confirm Delete";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4" style="max-width: 500px; width: 100%;">
        <h2 class="text-center mb-4">Confirm Delete</h2>
        <form method="post">
            <input type="hidden" asp-for="Expense.Id" />

            <p class="text-center">Are you sure you want to delete this expense?</p>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger">Yes, Delete</button>
                <a class="btn btn-secondary" asp-page="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
