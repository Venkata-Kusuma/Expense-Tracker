@page
@model Expense_Tracker.Pages.Expenses.ViewDetailsModel

@{
    ViewData["Title"] = "Your Expenses";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Your Expenses</h2>
        <div>
            <a class="btn btn-primary" asp-page="Charts">ChartView</a>
            <a class="btn btn-success" asp-page="Add">Add New</a>

        </div>
      
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-bordered table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Category</th>
                        <th>Amount</th>
                        <th>Created At</th>
                        <th>Updated At</th>
                        <th>Comments</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Expenses)
                    {
                        <tr>
                            <td>@item.Category</td>
                            <td>@item.Amount.ToString("C")</td> 
                            <td>@item.CreatedAt</td>
                            <td>@item.UpdatedAt </td> 
                            <td>@item.Comments</td>
                            <td>
                                <a class="btn btn-warning btn-sm" asp-page="Edit" asp-route-id="@item.Id">Edit</a>
                                <a class="btn btn-danger btn-sm" asp-page="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
